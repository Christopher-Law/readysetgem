---
import { homeClasses } from "../../lib/homeClasses";

const { container, navLink, btnPrimaryHeader, btnPrimaryHeaderMobile } = homeClasses;
---

<a
  href="#main"
  class="sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4 focus:z-50 border border-amber-600 bg-amber-50 px-3 py-2 text-sm font-semibold text-amber-900"
>
  Skip to content
</a>

<header class="sticky top-0 z-40 border-b border-amber-200/60 bg-amber-50/80 backdrop-blur-sm">
  <div class={`${container} flex items-center justify-between py-4`}>
    <a href="/" class="group flex items-center gap-2.5 font-bold tracking-tight text-amber-900">
      <svg aria-hidden="true" viewBox="0 0 24 24" class="h-5 w-5" fill="none">
        <path
          d="M7.2 4.5h9.6l3.2 4.2L12 20.5 4 8.7 7.2 4.5Z"
          fill="rgb(254 243 199)"
          stroke="rgb(180 83 9)"
          stroke-width="2"
          stroke-linejoin="round"
        />
        <path
          d="M4 8.7h16M12 20.5 9.1 8.7 12 4.5l2.9 4.2L12 20.5Z"
          stroke="rgb(180 83 9)"
          stroke-width="1.5"
          stroke-linejoin="round"
          opacity="0.9"
        />
      </svg>
      <span class="text-base sm:text-lg">Ready Set Gem</span>
    </a>

    <nav class="hidden items-center gap-2 sm:flex" aria-label="Primary">
      <a class={navLink} href="#how-it-works">How it works</a>
      <a class={navLink} href="#pricing">Pricing</a>
      <a class={navLink} href="#faq">FAQ</a>
      <a class={btnPrimaryHeader} href="#contact">Get my cards fixed</a>
    </nav>

    <a class={`sm:hidden ${btnPrimaryHeaderMobile}`} href="#contact">Get my cards fixed</a>
  </div>
</header>

