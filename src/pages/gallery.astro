---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BeforeAfterSwitcher from "../components/BeforeAfterSwitcher.astro";
import BeforeAfterSwitcherScript from "../components/BeforeAfterSwitcherScript.astro";
import { beforeAfterImages } from "../lib/images";
---

<Layout
	title="Slabworks - Before/After Gallery"
	description="Browse our gallery of trading card restoration examples. See real transformations from damaged cards to restored condition."
>
	<a
		href="#main"
		class="sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4 focus:z-50 rounded-full bg-white px-4 py-2 text-sm font-semibold text-slate-950 shadow-lg ring-1 ring-white/30"
	>
		Skip to content
	</a>

	<div class="min-h-dvh bg-slate-50 pb-[calc(6rem+env(safe-area-inset-bottom))] text-slate-950 md:pb-0">
		<Header sectionHrefPrefix="/" />

		<main id="main">
			<section class="border-b border-slate-200 bg-white" aria-label="Before and after examples">
				<div class="mx-auto w-full max-w-6xl px-5 py-10 sm:py-12">
					<div class="flex flex-wrap items-end justify-between gap-4">
						<div class="max-w-3xl">
							<h2 class="text-2xl font-extrabold tracking-tight text-slate-950">Gallery</h2>
							<p class="mt-2 text-sm text-slate-700">
								See the transformation. Each example shows the condition before restoration and the results after our work.
							</p>
						</div>
					</div>

					<div class="mt-8 grid gap-5 md:grid-cols-3">
						{beforeAfterImages.map((img, idx) => (
							<BeforeAfterSwitcher
								beforeSrc={img.beforeSrc}
								afterSrc={img.afterSrc}
								beforeAlt={img.beforeAlt || `Before restoration example ${idx + 1}`}
								afterAlt={img.afterAlt || `After restoration example ${idx + 1}`}
							/>
						))}
					</div>
				</div>
			</section>
		</main>

		<Footer />
	</div>

	<BeforeAfterSwitcherScript />
</Layout>
