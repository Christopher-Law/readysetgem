---
import Layout from "../layouts/Layout.astro";

const socials = [
	{ label: "Instagram", href: "https://instagram.com/readysetgem", handle: "@readysetgem" },
	{ label: "TikTok", href: "https://tiktok.com/@readysetgem", handle: "@readysetgem" },
	{ label: "YouTube", href: "https://youtube.com/@readysetgem", handle: "@readysetgem" },
] as const;

const mailtoHref =
	"mailto:hello@readysetgem.ca?subject=Card%20Restoration%20Request&body=Hi%20Ready%20Set%20Gem%2C%0A%0AI'd%20like%20to%20request%20restoration%20for%20some%20cards%3A%0A%0A-%20Game%3A%0A-%20Number%20of%20cards%3A%0A-%20Damage%20description%3A%0A-%20Goal%20(display%2Fcollection%2Fgrading)%3A%0A-%20Photos%20link%3A%0A%0AThanks!";
---

<Layout
	title="Ready Set Gem - Card Restoration"
	description="Trading card restoration service. We carefully restore your cards with detailed inspection and honest communication. Based in Kingston, Ontario."
>
	<a
		href="#main"
		class="sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4 focus:z-50 rounded-full bg-white px-4 py-2 text-sm font-semibold text-slate-950 shadow-lg ring-1 ring-white/30"
	>
		Skip to content
	</a>

	<div class="min-h-dvh bg-slate-950 text-slate-100">
		<header class="sticky top-0 z-50 border-b border-white/10 bg-slate-950/70 backdrop-blur">
			<div class="mx-auto flex w-full max-w-6xl items-center justify-between px-5 py-4">
				<a href="/" class="group flex items-center gap-3">
					<span class="grid h-9 w-9 place-items-center rounded-xl bg-gradient-to-br from-emerald-400 via-cyan-400 to-violet-400 text-slate-950 shadow-sm ring-1 ring-white/20">
						<svg aria-hidden="true" viewBox="0 0 24 24" class="h-5 w-5" fill="none">
							<path
								d="M7.2 4.5h9.6l3.2 4.2L12 20.5 4 8.7 7.2 4.5Z"
								fill="rgba(15, 23, 42, 0.12)"
								stroke="rgba(15, 23, 42, 0.85)"
								stroke-width="2"
								stroke-linejoin="round"
							/>
							<path
								d="M4 8.7h16M12 20.5 9.1 8.7 12 4.5l2.9 4.2L12 20.5Z"
								stroke="rgba(15, 23, 42, 0.8)"
								stroke-width="1.5"
								stroke-linejoin="round"
								opacity="0.9"
							/>
						</svg>
					</span>
					<div class="leading-tight">
						<div class="text-sm font-semibold tracking-wide text-white/80">Ready Set Gem</div>
						<div class="text-base font-bold tracking-tight text-white">Card restoration</div>
					</div>
				</a>

				<nav class="hidden items-center gap-1 md:flex" aria-label="Primary">
					<a class="rounded-full px-3 py-2 text-sm font-medium text-white/70 hover:bg-white/5 hover:text-white" href="#how-it-works">How it works</a>
					<a class="rounded-full px-3 py-2 text-sm font-medium text-white/70 hover:bg-white/5 hover:text-white" href="#pricing">Pricing</a>
					<a class="rounded-full px-3 py-2 text-sm font-medium text-white/70 hover:bg-white/5 hover:text-white" href="#faq">FAQ</a>
					<a
						class="ml-1 inline-flex items-center justify-center rounded-full bg-gradient-to-r from-emerald-400 via-cyan-400 to-violet-400 px-4 py-2 text-sm font-bold text-slate-950 shadow-sm hover:brightness-110"
						href={mailtoHref}
					>
						Email photos
					</a>
				</nav>

				<a
					class="md:hidden inline-flex items-center justify-center rounded-full bg-gradient-to-r from-emerald-400 via-cyan-400 to-violet-400 px-4 py-2 text-sm font-bold text-slate-950 shadow-sm hover:brightness-110"
					href={mailtoHref}
				>
					Email photos
				</a>
			</div>
		</header>

		<main id="main">
			<section class="relative overflow-hidden">
				<div aria-hidden="true" class="pointer-events-none absolute inset-0">
					<div class="absolute -left-32 top-[-120px] h-[520px] w-[520px] rounded-full bg-emerald-500/20 blur-3xl"></div>
					<div class="absolute -right-32 top-[40px] h-[520px] w-[520px] rounded-full bg-violet-500/20 blur-3xl"></div>
					<div class="absolute bottom-[-260px] left-1/2 h-[640px] w-[640px] -translate-x-1/2 rounded-full bg-cyan-500/15 blur-3xl"></div>
				</div>

				<div class="mx-auto w-full max-w-6xl px-5 py-12 sm:py-16">
					<div class="grid gap-10 lg:grid-cols-12 lg:items-start">
						<div class="lg:col-span-7">
							<p class="inline-flex items-center gap-2 rounded-full bg-white/5 px-3 py-1 text-sm font-semibold text-white/80 ring-1 ring-white/10">
								<span class="h-1.5 w-1.5 rounded-full bg-emerald-400"></span>
								Serving collectors across North America
							</p>
							<h1 class="mt-5 text-4xl font-black leading-tight tracking-tight text-white sm:text-6xl">
								Bring your trading cards back to life
							</h1>
							<p class="mt-5 max-w-2xl text-lg leading-relaxed text-white/75 sm:text-xl">
								Start with photos and a quick note. We’ll review what’s possible, outline the risks, and send a restoration plan before you ship anything. Your cards come back cleaner, sharper, and ready to display.
							</p>

							<div class="mt-8 flex flex-wrap items-center gap-3">
								<a
									class="inline-flex items-center justify-center rounded-full bg-gradient-to-r from-emerald-400 via-cyan-400 to-violet-400 px-6 py-3 text-base font-bold text-slate-950 shadow-sm hover:brightness-110"
									href={mailtoHref}
								>
									Get my cards fixed
								</a>
								<a
									class="inline-flex items-center justify-center rounded-full bg-white/5 px-6 py-3 text-base font-semibold text-white ring-1 ring-white/10 hover:bg-white/10"
									href="#before-after"
								>
									See before/after
								</a>
								<a class="inline-flex items-center justify-center rounded-full px-3 py-3 text-sm font-semibold text-white/70 hover:text-white" href="#how-it-works">
									Learn how it works
								</a>
							</div>

							<p class="mt-5 text-sm text-white/60">
								We reply to new requests within <strong class="font-semibold text-white">1–2 business days</strong>. If you have a deadline, mention it and we’ll be honest about timing.
							</p>
						</div>

						<aside class="lg:col-span-5">
							<div class="rounded-3xl bg-white/5 p-6 ring-1 ring-white/10 backdrop-blur">
								<h2 class="text-lg font-bold text-white">Fastest way to start</h2>
								<p class="mt-2 text-sm leading-relaxed text-white/70">
									Email photos first. We’ll confirm if we can take the job, outline risks, and provide the exact shipping address + intake steps.
								</p>

								<div class="mt-5 grid gap-3">
									<a
										class="inline-flex items-center justify-center rounded-2xl bg-white px-5 py-3 text-sm font-bold text-slate-950 hover:bg-slate-50"
										href={mailtoHref}
									>
										Email: hello@readysetgem.ca
									</a>

									<div class="rounded-2xl bg-slate-950/40 p-4 ring-1 ring-white/10">
										<p class="text-xs font-semibold uppercase tracking-wider text-white/60">Include</p>
										<ul class="mt-3 space-y-2 text-sm text-white/70">
											<li class="flex gap-2">
												<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-emerald-400"></span>
												<span><strong class="font-semibold text-white">Photos:</strong> front + back, plus close-ups of the damage (bends, creases, dents, edge wear, lifting).</span>
											</li>
											<li class="flex gap-2">
												<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-cyan-400"></span>
												<span><strong class="font-semibold text-white">Goal:</strong> display, collection preservation, or grading-focused.</span>
											</li>
											<li class="flex gap-2">
												<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-violet-400"></span>
												<span><strong class="font-semibold text-white">Any risks:</strong> water exposure, mold smell, smoke, adhesive, or prior attempts to fix.</span>
											</li>
										</ul>
									</div>
								</div>

								<div class="mt-5 flex flex-wrap items-center gap-2">
									<a class="rounded-full bg-white/5 px-3 py-2 text-sm font-semibold text-white/75 ring-1 ring-white/10 hover:bg-white/10" href="#contact">
										Or jump to contact details
									</a>
									<a class="rounded-full bg-white/5 px-3 py-2 text-sm font-semibold text-white/75 ring-1 ring-white/10 hover:bg-white/10" href="#socials">
										DM {socials[0].handle}
									</a>
								</div>
							</div>
						</aside>
					</div>
				</div>
			</section>

			<section class="border-y border-white/10 bg-slate-950/40" id="before-after" aria-label="Before and after photos">
				<div class="mx-auto w-full max-w-6xl px-5 py-12">
					<div class="flex flex-wrap items-end justify-between gap-4">
						<div>
							<h2 class="text-2xl font-extrabold tracking-tight text-white">Before / After</h2>
							<p class="mt-2 max-w-2xl text-sm text-white/70">
								Placeholder gallery for 3 examples. Swap these with real photos when ready.
							</p>
						</div>
						<a class="text-sm font-semibold text-white/80 hover:text-white" href="#contact">Send yours →</a>
					</div>

					<div class="mt-8 grid gap-5 md:grid-cols-3">
						{Array.from({ length: 3 }).map((_, idx) => (
							<figure class="group overflow-hidden rounded-3xl bg-white/5 ring-1 ring-white/10">
								<div class="relative aspect-[4/3]">
									<div class="absolute inset-0 bg-gradient-to-br from-emerald-400/20 via-cyan-400/10 to-violet-400/20"></div>
									<div class="absolute inset-0 grid place-items-center p-6 text-center">
										<div>
											<div class="text-xs font-semibold uppercase tracking-wider text-white/70">Example {idx + 1}</div>
											<div class="mt-2 text-sm font-semibold text-white">Before → After</div>
											<div class="mt-2 text-xs text-white/60">Drop in an image pair (or a slider) here.</div>
										</div>
									</div>
								</div>
								<figcaption class="p-4 text-sm text-white/70">
									<strong class="font-semibold text-white">Placeholder caption:</strong> what changed, what stayed the same, and the risk notes.
								</figcaption>
							</figure>
						))}
					</div>
				</div>
			</section>

			<section class="mx-auto w-full max-w-6xl px-5 py-14" id="getting-started" aria-label="Getting started">
				<div class="grid gap-10 lg:grid-cols-12 lg:items-start">
					<div class="lg:col-span-4">
						<h2 class="text-3xl font-extrabold tracking-tight text-white">Getting started</h2>
						<p class="mt-3 text-white/70">
							If you have valuable cards, the main question is “what happens before I ship anything?” This is the flow from first message to cards back in hand.
						</p>
					</div>
					<div class="lg:col-span-8">
						<div class="grid gap-5 lg:grid-cols-3">
							<div class="rounded-3xl bg-white/5 p-6 ring-1 ring-white/10">
								<p class="text-sm font-semibold text-white/70">Step 01</p>
								<h3 class="mt-2 text-lg font-bold text-white">1) Email photos first</h3>
								<p class="mt-3 text-sm leading-relaxed text-white/70">
									Send a few clear photos and a short description of the damage and your goal (display, collection, or grading). We’ll reply with next steps and whether restoration looks realistic.
								</p>
								<ul class="mt-4 space-y-2 text-sm text-white/70">
									<li class="flex gap-2">
										<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-emerald-400"></span>
										<span>Front + back, straight-on</span>
									</li>
									<li class="flex gap-2">
										<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-cyan-400"></span>
										<span>Close-ups of bends/creases/edge issues</span>
									</li>
									<li class="flex gap-2">
										<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-violet-400"></span>
										<span>Any prior damage notes (water, smoke, adhesive, etc.)</span>
									</li>
								</ul>
							</div>

							<div class="rounded-3xl bg-white/5 p-6 ring-1 ring-white/10">
								<p class="text-sm font-semibold text-white/70">Step 02</p>
								<h3 class="mt-2 text-lg font-bold text-white">2) We send shipping instructions</h3>
								<p class="mt-3 text-sm leading-relaxed text-white/70">
									After we review your photos, we’ll confirm if we can take the job and share the exact shipping address and packing checklist. This prevents surprise shipments and reduces risk in transit.
								</p>
								<p class="mt-4 text-xs leading-relaxed text-white/60">
									We strongly recommend tracked shipping. For higher-value cards, consider insurance and signature on delivery.
								</p>
							</div>

							<div class="rounded-3xl bg-white/5 p-6 ring-1 ring-white/10">
								<p class="text-sm font-semibold text-white/70">Step 03</p>
								<h3 class="mt-2 text-lg font-bold text-white">3) Inspection → plan → approval</h3>
								<p class="mt-3 text-sm leading-relaxed text-white/70">
									Once your cards arrive, we do a close inspection and send a restoration plan with risks and recommendations. <strong class="font-semibold text-white">No work starts until you approve</strong>.
								</p>
								<p class="mt-4 text-xs leading-relaxed text-white/60">
									If you decide not to proceed, we can return your cards. Details are shared with your plan so you can make a clear call.
								</p>
							</div>
						</div>

						<div class="mt-6 rounded-3xl bg-gradient-to-r from-emerald-400/15 via-cyan-400/10 to-violet-400/15 p-[1px]">
							<div class="rounded-3xl bg-slate-950/60 p-6 ring-1 ring-white/10">
								<h3 class="text-lg font-bold text-white">Typical response time</h3>
								<p class="mt-2 text-sm leading-relaxed text-white/70">
									We reply to new requests within <strong class="font-semibold text-white">1–2 business days</strong>. If you have a deadline (event, gift, show), mention it in your email and we’ll tell you what’s realistic.
								</p>
							</div>
						</div>
					</div>
				</div>
			</section>

			<section class="mx-auto w-full max-w-6xl px-5 pb-14" id="how-it-works" aria-label="How it works">
				<div class="flex flex-wrap items-end justify-between gap-4">
					<div>
						<h2 class="text-3xl font-extrabold tracking-tight text-white">How we work</h2>
						<p class="mt-3 max-w-2xl text-white/70">
							No surprises. We look closely, we explain what we see, and we only work on what you're comfortable with.
						</p>
					</div>
					<a class="text-sm font-semibold text-white/80 hover:text-white" href={mailtoHref}>Start with photos →</a>
				</div>

				<div class="mt-8 grid gap-5 md:grid-cols-3">
					<div class="rounded-3xl bg-white/5 p-6 ring-1 ring-white/10">
						<h3 class="text-lg font-bold text-white">We inspect everything</h3>
						<p class="mt-3 text-sm leading-relaxed text-white/70">
							Under magnification and UV light. Surface, edges, corners, and how the card stock behaves. Understanding the full picture helps us work safely.
						</p>
					</div>
					<div class="rounded-3xl bg-white/5 p-6 ring-1 ring-white/10">
						<h3 class="text-lg font-bold text-white">We tell you what we found</h3>
						<p class="mt-3 text-sm leading-relaxed text-white/70">
							Here's what we found, what we can realistically improve, what the risks are, and what we won't touch. You decide if we proceed.
						</p>
					</div>
					<div class="rounded-3xl bg-white/5 p-6 ring-1 ring-white/10">
						<h3 class="text-lg font-bold text-white">We document it all</h3>
						<p class="mt-3 text-sm leading-relaxed text-white/70">
							Before photos, after photos, and careful notes. Your cards are packaged securely for return shipping.
						</p>
					</div>
				</div>
			</section>

			<section class="mx-auto w-full max-w-6xl px-5 pb-14" id="what-we-do" aria-label="What we can help with">
				<h2 class="text-3xl font-extrabold tracking-tight text-white">What we can help with</h2>
				<p class="mt-3 max-w-3xl text-white/70">
					We work on Pokémon, Yu-Gi-Oh!, Magic: The Gathering, sports cards, and other trading cards. Here's what we typically work on.
				</p>

				<div class="mt-8 grid gap-5 lg:grid-cols-2">
					<div class="rounded-3xl bg-white/5 p-6 ring-1 ring-white/10">
						<h3 class="text-lg font-bold text-white">Common improvements</h3>
						<ul class="mt-4 space-y-2 text-sm text-white/70">
							<li class="flex items-start gap-2">
								<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-emerald-400"></span>
								<span>Surface cleaning for dirt, fingerprints, and handling marks</span>
							</li>
							<li class="flex items-start gap-2">
								<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-emerald-400"></span>
								<span>Light warping or bends</span>
							</li>
							<li class="flex items-start gap-2">
								<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-emerald-400"></span>
								<span>Minor adhesive residue</span>
							</li>
							<li class="flex items-start gap-2">
								<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-emerald-400"></span>
								<span>Edge roughness or lifting</span>
							</li>
						</ul>
						<p class="mt-4 text-xs text-white/60">
							Every card is different. We'll assess yours and be honest about what's possible.
						</p>
					</div>

					<div class="rounded-3xl bg-white/5 p-6 ring-1 ring-white/10">
						<h3 class="text-lg font-bold text-white">What we won't do</h3>
						<ul class="mt-4 space-y-2 text-sm text-white/70">
							<li class="flex items-start gap-2">
								<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-violet-400"></span>
								<span>Trim, sand, or reshape corners or edges</span>
							</li>
							<li class="flex items-start gap-2">
								<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-violet-400"></span>
								<span>Add color, touch up ink, or simulate printing</span>
							</li>
							<li class="flex items-start gap-2">
								<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-violet-400"></span>
								<span>Anything meant to fool grading companies</span>
							</li>
						</ul>
						<p class="mt-4 text-xs font-medium text-white/80">
							We're here to restore, not alter. If something looks like it would be flagged as alteration, we'll tell you upfront.
						</p>
					</div>
				</div>
			</section>

			<section class="mx-auto w-full max-w-6xl px-5 pb-14" id="process" aria-label="The process">
				<h2 class="text-3xl font-extrabold tracking-tight text-white">The process</h2>
				<p class="mt-3 max-w-3xl text-white/70">
					From the moment your cards arrive until they're on their way back. We expect 7–14 days, but turnaround could be longer based on our queue, how many cards are in the order, and the damage on each card.
				</p>

				<div class="mt-8 grid gap-5 lg:grid-cols-12">
					<div class="lg:col-span-5">
						<div class="rounded-3xl bg-white/5 p-6 ring-1 ring-white/10">
							<h3 class="text-lg font-bold text-white">How updates + approval work</h3>
							<p class="mt-3 text-sm leading-relaxed text-white/70">
								Everything is documented in writing so you can make a clear decision. We communicate by email unless we agree on something else.
							</p>
							<ul class="mt-4 space-y-2 text-sm text-white/70">
								<li class="flex items-start gap-2">
									<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-emerald-400"></span>
									<span><strong class="font-semibold text-white">You receive:</strong> photos + findings + a recommended plan, with risks and what we will/won’t do.</span>
								</li>
								<li class="flex items-start gap-2">
									<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-cyan-400"></span>
									<span><strong class="font-semibold text-white">You approve:</strong> by replying in writing (or via a simple confirmation method we provide).</span>
								</li>
								<li class="flex items-start gap-2">
									<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-violet-400"></span>
									<span><strong class="font-semibold text-white">No surprises:</strong> if we discover something new during work, we pause and check in before continuing.</span>
								</li>
							</ul>
						</div>
					</div>

					<div class="lg:col-span-7">
						<div class="grid gap-4">
							{[
								{
									n: "1",
									title: "Your cards arrive",
									body: "We log everything, take consistent photos under good lighting, and make initial notes about condition.",
								},
								{
									n: "2",
									title: "Close inspection",
									body: "Magnification and UV light check. We look at surface, edges, corners, and how the card stock behaves. This helps us determine what's safe to work on.",
								},
								{
									n: "3",
									title: "We send you a plan",
									body: "Here's what we found, what we think we can do, what the risks are, and what we recommend. You review and approve before we start any work.",
									after:
										"If you want changes (for example, “only clean, no stabilization”), tell us. We’ll adjust the plan or recommend against parts that aren’t safe.",
								},
								{
									n: "4",
									title: "We do the work",
									body: "Once you approve, we proceed carefully. Controlled cleaning, stabilization when needed, and conservative methods throughout.",
								},
								{
									n: "5",
									title: "Final photos and return",
									body: "We photograph the results, package everything securely, and arrange return shipping with tracking.",
									after:
										"You’ll receive tracking when your package ships. If you’d like insurance or signature on delivery, tell us and we’ll include options.",
								},
							].map((step) => (
								<div class="rounded-3xl bg-white/5 p-6 ring-1 ring-white/10">
									<div class="flex items-start gap-4">
										<div class="grid h-10 w-10 shrink-0 place-items-center rounded-2xl bg-white/5 text-sm font-black text-white ring-1 ring-white/10">
											{step.n}
										</div>
