			.card-copy{margin:0 0 12px; color:rgba(233,236,255,.78); font-size:13px}
			.card-actions{display:flex; gap:10px; flex-wrap:wrap}

			.scanline{
				position:absolute;
				inset:0;
				background:
					linear-gradient(180deg, rgba(255,255,255,.035), transparent 30%, rgba(255,255,255,.02) 55%, transparent 80%),
					repeating-linear-gradient(180deg, rgba(255,255,255,.05) 0, rgba(255,255,255,.05) 1px, transparent 1px, transparent 6px);
				opacity:.20;
				mix-blend-mode: overlay;
				pointer-events:none;
				transform: translateY(-30%);
			}

			.checklist{margin:0; padding-left:18px; color:rgba(233,236,255,.86)}
			.checklist li{margin:8px 0}

			.section{padding:42px 0}
			.section.trust{padding-top:8px}
			.section-head{margin-bottom:18px}
			.section h2{
				margin:0 0 10px;
				font-size:28px;
				letter-spacing:-.4px;
			}
			.subhead{
				margin:0;
				color:rgba(233,236,255,.78);
				max-width: 80ch;
			}

			.grid-3{
				display:grid;
				grid-template-columns:repeat(3, minmax(0,1fr));
				gap:14px;
			}

			.panel{
				border-radius: var(--radius);
				background:
					linear-gradient(180deg, rgba(255,255,255,.055), rgba(255,255,255,.02));
				border:1px solid rgba(255,255,255,.12);
				padding:16px;
				box-shadow: 0 20px 50px rgba(0,0,0,.28);
			}
			.panel h3{margin:0 0 10px; font-size:16px; letter-spacing:-.2px}
			.bullets{margin:0; padding-left:18px; color:rgba(233,236,255,.84)}
			.bullets li{margin:8px 0}
			.note{margin:10px 0 0; color:rgba(233,236,255,.70); font-size:12px}
			.panel.warning{
				background:
					radial-gradient(700px 380px at 20% 0%, rgba(255,224,110,.10), transparent 55%),
					linear-gradient(180deg, rgba(255,255,255,.055), rgba(255,255,255,.02));
				border-color: rgba(255,224,110,.20);
			}

			.steps{
				margin:0;
				padding:0;
				list-style:none;
				display:grid;
				grid-template-columns:repeat(2, minmax(0,1fr));
				gap:12px;
				counter-reset: step;
			}
			.steps li{
				position:relative;
				padding:16px 16px 16px 54px;
				border-radius: var(--radius);
				background:linear-gradient(180deg, rgba(255,255,255,.055), rgba(255,255,255,.02));
				border:1px solid rgba(255,255,255,.12);
				box-shadow: 0 18px 45px rgba(0,0,0,.26);
			}
			.steps li::before{
				counter-increment: step;
				content: counter(step);
				position:absolute;
				left:14px;
				top:14px;
				width:30px; height:30px;
				display:grid;
				place-items:center;
				border-radius:12px;
				font-weight:900;
				background:linear-gradient(135deg, rgba(255,59,191,.22), rgba(35,231,255,.20));
				border:1px solid rgba(255,255,255,.16);
			}
			.step-k{font-weight:900; letter-spacing:.1px}
			.step-v{margin-top:6px; color:rgba(233,236,255,.78); font-size:13px}

			.pricing{
				display:grid;
				grid-template-columns: 1fr 1fr;
				gap:14px;
				align-items:start;
			}
			.price-top{
				display:flex;
				align-items:flex-start;
				justify-content:space-between;
				gap:12px;
				margin-bottom:10px;
			}
			.price-k{font-size:44px; font-weight:1000; letter-spacing:-1px; line-height:1}
			.price-v{margin-top:4px; color:rgba(233,236,255,.76); font-weight:700}
			.badge{
				font-size:12px;
				font-weight:900;
				padding:10px 10px;
				border-radius:14px;
				background:rgba(255,255,255,.06);
				border:1px solid rgba(255,255,255,.12);
				white-space:nowrap;
			}
			.panel.price{
				background:
					radial-gradient(900px 480px at 20% 0%, rgba(255,59,191,.12), transparent 60%),
					radial-gradient(900px 480px at 80% 0%, rgba(35,231,255,.10), transparent 60%),
					linear-gradient(180deg, rgba(255,255,255,.055), rgba(255,255,255,.02));
			}
			.divider{
				height:1px;
				background:rgba(255,255,255,.10);
				margin:14px 0;
			}

			.faq{
				display:grid;
				grid-template-columns:repeat(2, minmax(0,1fr));
				gap:12px;
			}
			details.panel{padding:0}
			summary{
				cursor:pointer;
				padding:16px;
				font-weight:900;
				list-style:none;
			}
			summary::-webkit-details-marker{display:none}
			details.panel > p{
				margin:0;
				padding:0 16px 16px;
				color:rgba(233,236,255,.78);
				font-size:13px;
			}
			details.panel:focus-within{outline:2px solid rgba(35,231,255,.45); outline-offset:2px}

			.contact-panel{
				border-radius: calc(var(--radius) + 4px);
				padding:18px;
				border:1px solid rgba(255,255,255,.14);
				background:
					radial-gradient(1000px 600px at 20% 0%, rgba(35,231,255,.16), transparent 55%),
					radial-gradient(800px 600px at 80% 0%, rgba(255,59,191,.14), transparent 55%),
					linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.02));
				display:grid;
				grid-template-columns: 1.3fr .7fr;
				gap:16px;
				align-items:start;
				box-shadow: 0 30px 70px rgba(0,0,0,.35);
			}
			.mini{margin:12px 0 0; padding-left:18px; color:rgba(233,236,255,.84)}
			.mini li{margin:8px 0}
			.contact-actions{display:flex; flex-direction:column; gap:10px; align-items:flex-start}

			.footer{
				padding:24px 0 18px;
				border-top:1px solid rgba(255,255,255,.08);
				background:rgba(7,8,16,.35);
			}
			.footer-inner{
				display:flex;
				justify-content:space-between;
				gap:16px;
				align-items:flex-start;
				padding-bottom:12px;
			}
			.brand-row{display:flex; align-items:center; gap:10px; font-weight:900}
			.footer-right{display:flex; gap:12px; flex-wrap:wrap}
			.footer-right a{
				text-decoration:none;
				color:rgba(233,236,255,.78);
				font-weight:800;
				font-size:13px;
				padding:10px 10px;
				border-radius:12px;
			}
			.footer-right a:hover{background:rgba(255,255,255,.06)}
			.footer-bottom{
				padding-top:10px;
				color:rgba(233,236,255,.62);
				font-size:12px;
			}

			@media (max-width: 980px){
				.hero-grid{grid-template-columns: 1fr; gap:14px}
				.hero{padding-top:38px}
				.hero-metrics{grid-template-columns: 1fr; }
				.grid-3{grid-template-columns: 1fr}
				.steps{grid-template-columns: 1fr}
				.pricing{grid-template-columns: 1fr}
				.faq{grid-template-columns: 1fr}
				.contact-panel{grid-template-columns: 1fr}
				.nav{gap:6px}
				.nav a{padding:10px 8px}
			}

			@media (prefers-reduced-motion: reduce){
				.btn:hover{transform:none}
				.scanline{display:none}
			}
