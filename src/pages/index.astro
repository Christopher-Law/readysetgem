---
import Layout from "../layouts/Layout.astro";

const socials = [
	{ label: "Instagram", href: "https://instagram.com/readysetgem", handle: "@readysetgem" },
	{ label: "TikTok", href: "https://tiktok.com/@readysetgem", handle: "@readysetgem" },
	{ label: "YouTube", href: "https://youtube.com/@readysetgem", handle: "@readysetgem" },
] as const;

const mailtoHref =
	"mailto:hello@readysetgem.ca?subject=Card%20Restoration%20Request&body=Hi%20Ready%20Set%20Gem%2C%0A%0AI'd%20like%20to%20request%20restoration%20for%20some%20cards%3A%0A%0A-%20Game%3A%0A-%20Number%20of%20cards%3A%0A-%20Damage%20description%3A%0A-%20Goal%20(display%2Fcollection%2Fgrading)%3A%0A-%20Photos%20link%3A%0A%0AThanks!";

const howItWorks = [
	{
		n: "01",
		title: "Email photos first",
		body: "Send front/back + close-ups, plus your goal (display, preservation, grading). We’ll tell you what’s realistic and any risks before you ship anything.",
	},
	{
		n: "02",
		title: "We review and confirm fit",
		body: "If we can take the job, we’ll reply with a simple plan, a quote (based on your card count), and an estimated turnaround.",
	},
	{
		n: "03",
		title: "You approve, then you ship",
		body: "No work starts until you approve in writing. After approval, we send the shipping address and packing notes. When your cards arrive, we confirm intake and send your invoice. Restoration begins after payment.",
	},
] as const;

const faqs = [
	{
		q: "Do I need to contact you before shipping my cards?",
		a: "Yes—please email photos first. We’ll confirm if we can take the job and then provide the exact shipping address and intake steps.",
	},
	{
		q: "How much does it cost?",
		a: "It’s $50 per card with a 5-card minimum. Shipping isn’t included; return shipping is billed at cost with tracking.",
	},
	{
		q: "Will this improve my card’s grade?",
		a: "Maybe, but we don’t guarantee it. We focus on conservative improvement and stability—not chasing grades.",
	},
	{
		q: "How long does it take?",
		a: "We’ll quote an estimated turnaround in our email after we review your photos. Timing depends on the queue, card count, and damage level.",
	},
	{
		q: "How quickly do you respond?",
		a: "We typically reply to new requests within 1–2 business days.",
	},
	{
		q: "What if I don’t approve the plan?",
		a: "That’s okay—no work starts without your written approval. If you’ve already shipped cards in, we’ll return them safely; return shipping is billed at cost with tracking.",
	},
	{
		q: "Do you work on my kind of cards?",
		a: "Usually, yes—Pokémon, Yu-Gi-Oh!, Magic: The Gathering, sports cards, and other trading cards. Email photos and we’ll confirm.",
	},
	{
		q: "Can I send fewer than 5 cards?",
		a: "Our standard minimum is 5 cards. If you have fewer, email us and we can discuss options.",
	},
	{
		q: "What if my card is too damaged?",
		a: "We’ll tell you upfront. If a card has severe stock separation, mold risk, heavy water damage, or if work would likely be considered alteration, we’ll recommend against restoration.",
	},
	{
		q: "What do you mean by restoration vs alteration?",
		a: "We restore, we don’t alter. If a job may be considered alteration by some grading companies or policies, we’ll tell you upfront and recommend against it.",
	},
	{
		q: "How should I pack my cards for shipping?",
		a: "After you approve the plan, we’ll send the shipping address and packing notes. In general:",
		bullets: [
			"Penny sleeve plus semi-rigid holder like a Card Saver, or toploader",
			"Team bag with no adhesive touching the card",
			"Bubble wrap + sturdy box",
			"Include a list of cards and your contact info",
		],
	},
] as const;
---

<Layout
	title="Ready Set Gem - Card Restoration"
	description="Trading card restoration service. We carefully restore your cards with detailed inspection and honest communication. Based in Kingston, Ontario."
>
	<a
		href="#main"
		class="sr-only focus:not-sr-only focus:fixed focus:left-4 focus:top-4 focus:z-50 rounded-full bg-white px-4 py-2 text-sm font-semibold text-slate-950 shadow-lg ring-1 ring-white/30"
	>
		Skip to content
	</a>

	<div class="min-h-dvh bg-slate-50 pb-[calc(6rem+env(safe-area-inset-bottom))] text-slate-950 md:pb-0">
		<header class="sticky top-0 z-50 border-b border-slate-200/80 bg-white/80 backdrop-blur">
			<div class="mx-auto flex w-full max-w-6xl items-center justify-between px-5 py-4">
				<a href="/" class="group flex items-center gap-3">
					<span class="grid h-9 w-9 place-items-center rounded-xl bg-emerald-600 text-white shadow-sm ring-1 ring-emerald-700/20">
						<svg aria-hidden="true" viewBox="0 0 24 24" class="h-5 w-5" fill="none">
							<path
								d="M7.2 4.5h9.6l3.2 4.2L12 20.5 4 8.7 7.2 4.5Z"
								fill="transparent"
								stroke="currentColor"
								stroke-width="2"
								stroke-linejoin="round"
							/>
							<path
								d="M4 8.7h16M12 20.5 9.1 8.7 12 4.5l2.9 4.2L12 20.5Z"
								stroke="currentColor"
								stroke-width="1.5"
								stroke-linejoin="round"
								opacity="0.9"
							/>
						</svg>
					</span>
					<div class="leading-tight">
						<div class="text-sm font-semibold tracking-wide text-slate-700">Ready Set Gem</div>
						<div class="text-base font-bold tracking-tight text-slate-950">Card restoration</div>
					</div>
				</a>

				<nav class="hidden items-center gap-1 md:flex" aria-label="Primary">
					<a class="rounded-full px-3 py-2 text-sm font-medium text-slate-700 hover:bg-slate-100 hover:text-slate-950" href="#how-it-works">How it works</a>
					<a class="rounded-full px-3 py-2 text-sm font-medium text-slate-700 hover:bg-slate-100 hover:text-slate-950" href="#pricing">Pricing</a>
					<a class="rounded-full px-3 py-2 text-sm font-medium text-slate-700 hover:bg-slate-100 hover:text-slate-950" href="#faq">FAQ</a>
					<a
						class="ml-1 inline-flex items-center justify-center rounded-full bg-emerald-600 px-4 py-2 text-sm font-bold text-white shadow-sm hover:bg-emerald-700"
						href={mailtoHref}
					>
						Email photos
					</a>
				</nav>

				<a
					class="md:hidden inline-flex items-center justify-center rounded-full bg-emerald-600 px-4 py-2 text-sm font-bold text-white shadow-sm hover:bg-emerald-700"
					href={mailtoHref}
				>
					Email photos
				</a>
			</div>
		</header>

		<main id="main">
			<section class="relative">
				<div class="mx-auto w-full max-w-6xl px-5 py-8 sm:py-12 lg:py-16">
					<div class="max-w-3xl">
						<p class="hidden sm:inline-flex items-center gap-2 rounded-full bg-white px-3 py-1 text-sm font-semibold text-slate-700 ring-1 ring-slate-200/80 shadow-sm">
							<span class="h-1.5 w-1.5 rounded-full bg-emerald-400"></span>
							Serving collectors across North America
						</p>
						<h1 class="mt-3 text-3xl font-black leading-tight tracking-tight text-slate-950 sm:mt-5 sm:text-5xl lg:text-6xl">
							Bring your trading cards back to life
						</h1>
						<p class="mt-4 max-w-2xl text-base leading-relaxed text-slate-700 sm:mt-5 sm:text-xl">
							Start with photos and a quick note. We'll tell you what's realistic, what the risks are, and what we'd recommend—before you ship anything.
						</p>
						<p class="mt-2 max-w-2xl text-xs font-semibold text-slate-600 sm:mt-3 sm:text-sm">
							No obligation—photos are just for an honest assessment.
						</p>

						<div class="mt-6 flex flex-col gap-3 sm:mt-8 sm:flex-row sm:flex-wrap sm:items-center">
							<a
								class="inline-flex w-full items-center justify-center rounded-full bg-emerald-600 px-6 py-3 text-base font-bold text-white shadow-sm hover:bg-emerald-700 sm:w-auto"
								href={mailtoHref}
							>
								Get my cards fixed
							</a>
							<a
								class="inline-flex w-full items-center justify-center rounded-full bg-white px-6 py-3 text-base font-semibold text-slate-900 ring-1 ring-slate-200/80 shadow-sm hover:bg-slate-50 sm:w-auto"
								href="#pricing"
							>
								View pricing
							</a>
							<a class="inline-flex items-center justify-center rounded-full px-3 py-3 text-sm font-semibold text-slate-700 hover:text-slate-950" href="#how-it-works">
								Learn how it works
							</a>
						</div>

						<p class="mt-4 text-sm text-slate-600 sm:mt-5">
							We typically reply within <strong class="font-semibold text-slate-950">1–2 business days</strong>. If you have a deadline, mention it and we'll be honest about timing.
						</p>
					</div>
				</div>
			</section>

			<section class="border-t border-slate-200 bg-white">
				<div class="mx-auto w-full max-w-6xl px-5 py-10 sm:py-12">
					<div class="grid gap-6 md:grid-cols-2 md:items-start">
							<div>
								<h2 class="text-xl font-bold text-slate-950">Ready to get started?</h2>
								<p class="mt-2 text-sm leading-relaxed text-slate-700">
									Email us photos of your cards and we'll review them within 1–2 business days. Include front/back shots, close-ups of damage, your goal (display, preservation, or grading), and any risk factors.
								</p>
								<div class="mt-4">
									<a
										class="inline-flex items-center justify-center rounded-full bg-emerald-600 px-5 py-2.5 text-sm font-bold text-white shadow-sm hover:bg-emerald-700"
										href={mailtoHref}
									>
										Email photos
									</a>
									<p class="mt-2 text-xs text-slate-600">hello@readysetgem.ca</p>
								</div>
							</div>
							<div class="rounded-2xl bg-slate-50 p-5 ring-1 ring-slate-200/80">
								<p class="text-xs font-semibold uppercase tracking-wider text-slate-500">What to include</p>
								<ul class="mt-3 space-y-2.5 text-sm text-slate-700">
									<li class="flex gap-2.5">
										<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-emerald-400"></span>
										<span><strong class="font-semibold text-slate-950">Photos:</strong> front + back, plus close-ups of damage</span>
									</li>
									<li class="flex gap-2.5">
										<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-cyan-400"></span>
										<span><strong class="font-semibold text-slate-950">Goal:</strong> display, preservation, or grading</span>
									</li>
									<li class="flex gap-2.5">
										<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-violet-400"></span>
										<span><strong class="font-semibold text-slate-950">Risks:</strong> water, mold, smoke, adhesive, prior fixes</span>
									</li>
								</ul>
							</div>
						</div>
				</div>
			</section>

			<section class="mx-auto w-full max-w-6xl scroll-mt-24 px-5 py-12 sm:py-14" id="how-it-works" aria-label="How it works">
				<div class="flex flex-wrap items-end justify-between gap-4">
					<div class="max-w-3xl">
						<h2 class="text-3xl font-extrabold tracking-tight text-slate-950">How it works</h2>
						<p class="mt-3 text-slate-700">Photos first → clear plan → your approval. No surprises.</p>
					</div>
					<a class="text-sm font-semibold text-slate-800 hover:text-slate-950" href={mailtoHref}>Start with photos →</a>
				</div>

				<div class="mt-8 grid gap-5 md:grid-cols-3">
					{howItWorks.map((s) => (
						<div class="rounded-3xl bg-white p-6 ring-1 ring-slate-200/80 shadow-sm">
							<p class="text-sm font-semibold text-slate-600">{s.n}</p>
							<h3 class="mt-2 text-lg font-bold text-slate-950">{s.title}</h3>
							<p class="mt-3 text-sm leading-relaxed text-slate-700">{s.body}</p>
						</div>
					))}
				</div>

				<div class="mt-6 rounded-3xl border border-emerald-200 bg-emerald-50/60 p-6">
					<h3 class="text-lg font-bold text-slate-950">Quick note on restoration</h3>
					<p class="mt-2 text-sm leading-relaxed text-slate-700">
						We focus on careful restoration—not alteration. If a job may be considered alteration by some grading companies or policies, we’ll tell you before anything starts.
					</p>
				</div>
			</section>

			<section class="scroll-mt-24 border-y border-slate-200 bg-white" id="before-after" aria-label="Before and after photos">
				<div class="mx-auto w-full max-w-6xl px-5 py-12 sm:py-14">
					<div class="flex flex-wrap items-end justify-between gap-4">
						<div>
							<h2 class="text-2xl font-extrabold tracking-tight text-slate-950">Before / After</h2>
							<p class="mt-2 max-w-2xl text-sm text-slate-700">
								Placeholder gallery (3 examples). Swap these with real photos when ready.
							</p>
						</div>
						<a class="text-sm font-semibold text-slate-800 hover:text-slate-950" href={mailtoHref}>Send yours →</a>
					</div>

					<div class="mt-8 grid gap-5 md:grid-cols-3">
						{Array.from({ length: 3 }).map((_, idx) => (
							<figure class="group overflow-hidden rounded-3xl bg-white ring-1 ring-slate-200/80 shadow-sm">
								<div class="relative aspect-[4/3]">
									<div class="absolute inset-0 bg-slate-100"></div>
									<div class="absolute inset-0 grid place-items-center p-6 text-center">
										<div>
											<div class="text-xs font-semibold uppercase tracking-wider text-slate-600">Example {idx + 1}</div>
											<div class="mt-2 text-sm font-semibold text-slate-950">Before → After</div>
											<div class="mt-2 text-xs text-slate-600">Drop in an image pair (or a slider) here.</div>
										</div>
									</div>
								</div>
								<figcaption class="p-4 text-sm text-slate-700">
									<strong class="font-semibold text-slate-950">Caption:</strong> what changed, what stayed the same, and any risk notes.
								</figcaption>
							</figure>
						))}
					</div>
				</div>
			</section>

			<section class="mx-auto w-full max-w-6xl scroll-mt-24 px-5 py-12 sm:py-14" id="pricing" aria-label="Pricing">
				<h2 class="text-3xl font-extrabold tracking-tight text-slate-950">Pricing</h2>
				<p class="mt-3 max-w-3xl text-slate-700">Simple: $50 per card, with a 5-card minimum.</p>

				<div class="mt-6 grid gap-5 lg:grid-cols-12 lg:items-stretch">
					<div class="lg:col-span-5 lg:h-full">
						<div class="rounded-3xl border border-emerald-200 bg-emerald-50/60 p-5 lg:h-full">
								<div class="flex flex-wrap items-end justify-between gap-3">
									<div>
										<div class="text-4xl font-black tracking-tight text-slate-950 sm:text-5xl">$50</div>
										<div class="mt-1 text-base font-semibold text-slate-700">per card</div>
									</div>
									<div class="whitespace-nowrap rounded-full bg-white px-3 py-2 text-sm font-bold text-slate-900 ring-1 ring-slate-200/80 shadow-sm">Min. 5 cards</div>
								</div>
								<div class="mt-5 space-y-2 text-slate-700">
									<p class="font-semibold text-slate-950">$50 per card</p>
								</div>
								<p class="mt-2 text-xs leading-relaxed text-slate-600">5-card minimum. Shipping billed separately.</p>

								<div class="mt-4 border-t border-emerald-200/70 pt-3">
									<p class="text-sm font-bold text-slate-950">What’s included</p>
									<ul class="mt-3 space-y-1 text-sm text-slate-700">
										<li class="flex items-start gap-2">
											<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-emerald-400"></span>
											<span>Careful inspection</span>
										</li>
										<li class="flex items-start gap-2">
											<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-emerald-400"></span>
											<span>A written plan before any work starts</span>
										</li>
										<li class="flex items-start gap-2">
											<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-emerald-400"></span>
											<span>Your approval before work begins</span>
										</li>
										<li class="flex items-start gap-2">
											<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-emerald-400"></span>
											<span>Before/after photos</span>
										</li>
										<li class="flex items-start gap-2">
											<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-emerald-400"></span>
											<span>Secure return packaging</span>
										</li>
									</ul>
								</div>
						</div>

					</div>

					<div class="lg:col-span-7 lg:flex lg:h-full lg:flex-col lg:gap-5">
						<div class="rounded-3xl bg-white p-6 ring-1 ring-slate-200/80 shadow-sm lg:flex-1">
							<h3 class="text-lg font-bold text-slate-950">Approvals + payment</h3>
							<p class="mt-3 text-sm leading-relaxed text-slate-700">
								You receive a written plan first, and <strong class="font-semibold text-slate-950">you approve it before we start any work</strong>.
							</p>
							<ul class="mt-4 space-y-2 text-sm text-slate-700">
								<li class="flex items-start gap-2">
									<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-emerald-400"></span>
									<span
										><strong class="font-semibold text-slate-950">When you pay:</strong> after you approve the plan and after we receive your cards (intake confirmed), before restoration begins.</span
									>
								</li>
								<li class="flex items-start gap-2">
									<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-cyan-400"></span>
									<span><strong class="font-semibold text-slate-950">How you pay:</strong> we’ll include payment options in your invoice so you can choose what’s easiest.</span>
								</li>
							</ul>
						</div>

						<div class="mt-5 rounded-3xl bg-white p-6 ring-1 ring-slate-200/80 shadow-sm lg:mt-0 lg:flex-1">
							<h3 class="text-lg font-bold text-slate-950">Shipping (short version)</h3>
							<p class="mt-3 text-sm leading-relaxed text-slate-700">
								We recommend tracked shipping both ways. For higher-value cards, consider insurance and signature on delivery.
							</p>
							<p class="mt-4 text-xs text-slate-600">
								We’ll provide the exact shipping address after we review your photos and you approve the plan.
							</p>
						</div>
					</div>
				</div>
			</section>

			<section class="mx-auto w-full max-w-6xl scroll-mt-24 px-5 py-12 sm:py-14" id="faq" aria-label="Common questions">
				<h2 class="text-3xl font-extrabold tracking-tight text-slate-950">Common questions</h2>
				<p class="mt-3 max-w-3xl text-slate-700">Straight answers to the things collectors ask before sending photos.</p>

				<div class="mt-8 space-y-4">
					{faqs.map((item) => (
						<details class="group rounded-3xl bg-white p-6 ring-1 ring-slate-200/80 shadow-sm open:bg-slate-50">
							<summary class="cursor-pointer list-none text-lg font-bold text-slate-950">
								<span class="mr-2 inline-block translate-y-[1px] text-slate-400 group-open:rotate-90">›</span>
								{item.q}
							</summary>
							<p class="mt-3 text-sm leading-relaxed text-slate-700">
								{item.a}
							</p>
							{item.bullets ? (
								<ul class="mt-4 space-y-2 text-sm text-slate-700">
									{item.bullets.map((b) => (
										<li class="flex items-start gap-2">
											<span class="mt-2 h-1.5 w-1.5 shrink-0 rounded-full bg-emerald-400"></span>
											<span>{b}</span>
										</li>
									))}
								</ul>
							) : null}
						</details>
					))}
				</div>
			</section>

			<!-- Contact CTA section removed -->
		</main>

		<footer class="border-t border-slate-200 bg-white py-10">
			<div class="mx-auto flex w-full max-w-6xl flex-col justify-between gap-6 px-5 md:flex-row">
				<div>
					<div class="flex items-center gap-3 font-bold tracking-tight text-slate-950">
						<span class="grid h-9 w-9 place-items-center rounded-xl bg-emerald-600 text-white shadow-sm ring-1 ring-emerald-700/20">
							<svg aria-hidden="true" viewBox="0 0 24 24" class="h-5 w-5" fill="none">
								<path
									d="M7.2 4.5h9.6l3.2 4.2L12 20.5 4 8.7 7.2 4.5Z"
									fill="transparent"
									stroke="currentColor"
									stroke-width="2"
									stroke-linejoin="round"
								/>
								<path
									d="M4 8.7h16M12 20.5 9.1 8.7 12 4.5l2.9 4.2L12 20.5Z"
									stroke="currentColor"
									stroke-width="1.5"
									stroke-linejoin="round"
									opacity="0.9"
								/>
							</svg>
						</span>
						<span>Ready Set Gem</span>
					</div>
					<p class="mt-2 text-sm text-slate-600">
						Trading card restoration based in Kingston, Ontario, serving North America.
					</p>
					<p class="mt-4 text-xs text-slate-500">© {new Date().getFullYear()} Ready Set Gem. All rights reserved.</p>
				</div>
				<div class="flex flex-col gap-4 md:items-end">
					<div class="flex flex-wrap items-center gap-2">
						<a class="rounded-full px-3 py-2 text-sm font-medium text-slate-700 hover:bg-slate-100 hover:text-slate-950" href="#how-it-works">How it works</a>
						<a class="rounded-full px-3 py-2 text-sm font-medium text-slate-700 hover:bg-slate-100 hover:text-slate-950" href="#pricing">Pricing</a>
						<a class="rounded-full px-3 py-2 text-sm font-medium text-slate-700 hover:bg-slate-100 hover:text-slate-950" href="#faq">FAQ</a>
					</div>
					<div class="flex flex-wrap items-center gap-2">
						{socials.map((s) => (
							<a
								class="rounded-full bg-slate-50 px-3 py-2 text-sm font-semibold text-slate-800 ring-1 ring-slate-200/80 hover:bg-slate-100"
								href={s.href}
								target="_blank"
								rel="noopener noreferrer"
							>
								{s.label}
							</a>
						))}
					</div>
				</div>
